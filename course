package javaphase1;

public abstract class Course {
private String courseID;
private String courseName;
private int StudentCount;
private Student[] students ;
public Course(String courseID, String courseName, int size) {
	this.courseID = courseID;
	this.courseName = courseName;
	StudentCount = 0;
	this.students = new Student[size];
}
public boolean addStudent(Student S) {
	if(this.StudentCount < students.length) {
		students[StudentCount]= S;
	StudentCount++;
	return true;}
	else
		return false;
}
public boolean removeStudent(String ID) { //delete with shift
for(int i = 0 ; i < StudentCount ; i++)
if(students[i].getstudentID().equals(ID))
{
	for(int j = i ; j < StudentCount - 1 ; j++)
		students[j] = students[j+1];
	StudentCount--;
	students[StudentCount] = null;
	return true;
}
	return false ;
}
public abstract double calculateGrade();
@Override
public String toString() {
    String str = "";
    str = str + ("Course ID: " + courseID + "\n");
    str = str + ("Course Name: " + courseName + "\n");
    str = str + ("Number of Students: " + StudentCount + "\n");
    
    str = str + "Students:\n";
    for (int i = 0; i < StudentCount; i++) {
        str = str + students[i].toString() + "\n";
    }
    
    return str;
}
public String getCourseID() {
	return courseID;
}

public String getCourseName() {
	return courseName;
}
public int getStudentCount() {
	return StudentCount;
}


}
